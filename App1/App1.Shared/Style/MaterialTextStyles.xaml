<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MaterialBaseTextBlockStyle" TargetType="TextBlock">

        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFontFamily}" />
    </Style>

    <!--
        ******************************************************************
        STYLE GUIDE TEXTBLOCKS STYLES
        ******************************************************************
    -->

    <!--
        IMPORTANT NOTE :
        CharacterSpacing is measured in 1/1000 of an "em". One "em" is equivalent to the current font size of the control.
        For example, here with MaterialHeadline1 an additional 96 pixels will be inserted between each character with FontSize="96" and CharacterSpacing="1000".
        So in order to specify the letter spacing of -1.5px from the Material guidelines, we will need to add CharacterSpacing="-15.625".
    -->

    <!--  Headline 1  -->
    <Style
        x:Key="MaterialHeadline1"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="96" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontFamily" Value="{StaticResource MaterialLightFontFamily}" />
        <Setter Property="CharacterSpacing" Value="-15.625" />
    </Style>

    <!--  Headline 2  -->
    <Style
        x:Key="MaterialHeadline2"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="60" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontFamily" Value="{StaticResource MaterialLightFontFamily}" />
        <Setter Property="CharacterSpacing" Value="-8.333" />
    </Style>

    <!--  Headline 3  -->
    <Style
        x:Key="MaterialHeadline3"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="48" />
    </Style>

    <!--  Headline 4  -->
    <Style
        x:Key="MaterialHeadline4"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="34" />
        <Setter Property="CharacterSpacing" Value="7.353" />
    </Style>

    <!--  Headline 5  -->
    <Style
        x:Key="MaterialHeadline5"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style
        x:Key="MaterialHeadline5Thin"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Thin" />
    </Style>

    <!--  Headline 6  -->
    <Style
        x:Key="MaterialHeadline6"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFontFamily}" />
        <Setter Property="CharacterSpacing" Value="7.5" />
    </Style>

    <!--  Subtitle 1  -->
    <Style
        x:Key="MaterialSubtitle1"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="16" />
        <Setter Property="CharacterSpacing" Value="9.375" />
    </Style>

    <!--  Subtitle 2  -->
    <Style
        x:Key="MaterialSubtitle2"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFontFamily}" />
        <Setter Property="CharacterSpacing" Value="7.143" />
    </Style>

    <!--  Body 1  -->
    <Style
        x:Key="MaterialBody1"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="16" />
        <Setter Property="CharacterSpacing" Value="31.25" />
    </Style>

    <!--  Body 2  -->
    <Style
        x:Key="MaterialBody2"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="14" />
        <Setter Property="CharacterSpacing" Value="17.857" />
    </Style>

    <!--  Button  -->
    <!--  ALL CAPS  -->
    <Style
        x:Key="MaterialButtonText"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFontFamily}" />
        <Setter Property="CharacterSpacing" Value="89.286" />
    </Style>

    <!--  Caption  -->
    <Style
        x:Key="MaterialCaption"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="12" />
        <Setter Property="CharacterSpacing" Value="33.333" />
    </Style>

    <!--  Overline  -->
    <!--  ALL CAPS  -->
    <Style
        x:Key="MaterialOverline"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">

        <Setter Property="FontSize" Value="10" />
        <Setter Property="CharacterSpacing" Value="150" />
    </Style>

    <!--  TITLE  -->

    <!--  Title Large  -->
    <Style
        x:Key="MaterialTitleLarge"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontWeight" Value="{ThemeResource TitleLargeFontWeight}" />
        <Setter Property="FontSize" Value="{ThemeResource TitleLargeFontSize}" />
    </Style>

    <!--  Title Medium  -->
    <Style
        x:Key="MaterialTitleMedium"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{ThemeResource MaterialMediumFontFamily}" />
        <Setter Property="FontWeight" Value="{ThemeResource TitleMediumFontWeight}" />
        <Setter Property="FontSize" Value="{ThemeResource TitleMediumFontSize}" />
    </Style>

    <!--  Title Small  -->
    <Style
        x:Key="MaterialTitleSmall"
        BasedOn="{StaticResource MaterialBaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{ThemeResource MaterialMediumFontFamily}" />
        <Setter Property="FontWeight" Value="{ThemeResource TitleSmallFontWeight}" />
        <Setter Property="FontSize" Value="{ThemeResource TitleSmallFontSize}" />
    </Style>




    <!--  Cuppertino  -->
    <SolidColorBrush
        x:Key="CupertinoTextBoxBorderBrush"
        Opacity="0.2"
        Color="{ThemeResource LabelColor}" />

    <SolidColorBrush
        x:Key="CupertinoDeleteButtonTextBoxBrush"
        Opacity="0.2"
        Color="{ThemeResource LabelColor}" />

    <CornerRadius x:Key="CupertinoTextBoxCornerRadius">5</CornerRadius>

