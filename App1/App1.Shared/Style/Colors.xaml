<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="LinearBrushRed" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0" Color="#22ff0000" />
        <GradientStop Offset="0.3" Color="#44ff0000" />
        <GradientStop Offset="0.9" Color="#88ff0000" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="LinearBrushGreen" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0" Color="#2200ff00" />
        <GradientStop Offset="0.3" Color="#4400ff00" />
        <GradientStop Offset="0.9" Color="#8800ff00" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LinearBrushGreenVert" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#2200ff00" />
        <GradientStop Offset="0.1" Color="#4400ff00" />
        <GradientStop Offset="0.4" Color="#8800ff00" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LinearBrushRedVert" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#22ff0000" />
        <GradientStop Offset="0.1" Color="#44ff0000" />
        <GradientStop Offset="0.4" Color="#88ff0000" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CardBorderColor" Color="#A19F9D" />
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#323130" />
</ResourceDictionary>