<Application
    x:Class="App1.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Load WinUI resources  -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <!--  Load Uno.Material resources  -->
                <MaterialColors xmlns="using:Uno.Material" OverrideSource="ms-appx:///Style/MaterialColorsOverride.xaml" />
                <MaterialFonts xmlns="using:Uno.Material" OverrideSource="ms-appx:///Style/MaterialFontsOverride.xaml" />
                <MaterialResources xmlns="using:Uno.Material" WithImplicitStyles="True" />

                <!--  Load custom application resources  -->
                <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
                <MaterialToolkitResources xmlns="using:Uno.Toolkit.UI.Material" />

                <!--  ...  -->
                <ResourceDictionary Source="/Style/AllStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="MaterialIcons">ms-appx:///Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>